<?xml version="1.0" encoding="UTF-8"?>
<!-- This is an unmanaged datasource. It should be used for proofs of concept 
	or testing only. It uses H2, an in memory database that ships with JBoss 
	AS. -->
<datasources xmlns="http://www.jboss.org/ironjacamar/schema">
	<datasource jndi-name="java:jboss/datasources/codeschool"
		enabled="true" use-java-context="true" pool-name="codeschooldb">
		<connection-url>jdbc:mysql://localhost:3306/codeschool?characterEncoding=utf-8</connection-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<driver>mysql</driver>
		<security>
			<user-name>root</user-name>
			<password>111111</password>
		</security>
	</datasource>
</datasources>
 